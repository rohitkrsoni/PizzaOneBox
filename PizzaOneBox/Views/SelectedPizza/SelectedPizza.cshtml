                <div class="form-group row">
                    <label asp-for="Pizza.PizzaSizeId" class="col-sm-2 col-form-label">Size</label>
                    <div class="col-sm-10">
                        <select asp-for="Pizza.PizzaSizeId" asp-items="Html.GetEnumSelectList<Size>()" class="custom-select mr-sm-2 col-6">
                            <option selected="selected" value="">Please select size</option>
                        </select>
                        <span asp-validation-for="@Model.PizzaSize" class="text-danger" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Pizza.PizzaBaseId" class="col-sm-2 col-form-label">Base</label>
                    <div class="col-sm-10">
                        <select asp-for="Pizza.PizzaBaseId" asp-items="Html.GetEnumSelectList<BaseName>()" class="custom-select mr-sm-2 col-6">
                            <option selected="selected" value="">Please select base</option>
                        </select>
                        <span asp-validation-for="@Model.PizzaBase" class="text-danger" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        @foreach (SelectListItem topping in Model.Toppings)
                        {
                            <tr>
                                <td><input id="@topping.Value" type="checkbox" name="Toppings" value="@topping.Value" checked="@topping.Selected" /></td>
                                <td><label for="@topping.Value">@topping.Text</label></td>
                            </tr>
                        }
                        <span asp-validation-for="Toppings" class="text-danger"></span>

                    </div>
                </div>
                <span class="error text-danger">Please select at-least one Topping.</span>
                <br />
                <div class="row">
                    <label for="@Model.AddOns">Add Ons</label>
                    <div class="col-6">
                        @foreach (SelectListItem addOn in Model.AddOns)
                        {
                            <tr>
                                <td><input id="@addOn.Value" type="checkbox" name="AddOns" value="@addOn.Value" checked="@addOn.Selected" /></td>
                                <td><label for="@addOn.Value">@addOn.Text</label></td>
                            </tr>
                        }
                    </div>
                </div>
                <div class="cen mb-5">
                    <input id="btnSubmit" type="submit" value="Place Order" class="btn btn-primary" />
                    @if (ViewBag.ActivateOrderButton ?? false)
                    {
                        <input type="submit" value="Place Order" class="btn btn-primary" />
                    }
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Total Cost</button>
                    </div>
                    <div>Cost @Model.Pizza.Price.ToString("C")</div>
                </div>
            </div>

            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
            <script type="text/javascript">
                $(function () {
                    $("#btnSubmit").click(function () {
                        var checked_checkboxes = $("#selectedToppings input[type=checkbox]:checked");
                        if (checked_checkboxes.length == 0) {
                            $(".error").show();
                            return false;
                        }
                        return true;
                    });
                });
            </script>
