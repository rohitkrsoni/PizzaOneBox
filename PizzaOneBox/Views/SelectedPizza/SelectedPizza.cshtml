@model PizzaModel;
@using Microsoft.AspNetCore.Http;
    <form asp-controller="SelectedPizza" asp-action="SelectedPizza"  method="post">
        <div class="center">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">@Model.PizzaName</label>
                <input type="hidden" asp-for="PizzaId" value="@Model.PizzaId" />
                <input type="hidden" asp-for="PizzaName" value="@Model.PizzaName" class="col-sm-2 col-form-label">

            </div>
            <div class="form-group row">
                <label asp-for="Size" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Size" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<PizzaSize>()">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Base" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Base" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<PizzaBase>()">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Toppings" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select multiple asp-for="Toppings" class="custom-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<Topping>()">
                    </select>
                    <span asp-validation-for="Toppings" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Total Cost</button>
                </div>
                <div>Cost= @Model.Cost</div>
            </div>
        </div>
    </form>

