@model SelectedPizzaViewModel;
@using Microsoft.AspNetCore.Http;
<div class="container bg-white " style="margin: 20px; padding: 20px; border-radius: 10px;">
        
        <form class="pizzaTitle" id="SelectedPizzaForm" asp-controller="SelectedPizza" asp-action="SelectedPizza" method="post">
            <div class="center">

                <div class="form-group row">
                    <div class="col-sm-3"><img class=" img" asp-append-version="true" src="@Model.Pizza.PhotoPath" /></div>
                    <div class="col-sm-9">
                        <h3 class="col-sm-6 h3 pizzaTitle">@Model.Pizza.PizzaName</h3>
                        <p class="h5 col-sm-10">@Model.Pizza.Description</p>
                    </div>
                    
                </div>
                <div class="form-group row">
                    <label asp-for="Pizza.PizzaSizeId" class="col-sm-2 col-form-label">Size</label>
                    <div class="col-sm-10">
                        <select onchange="document.getElementById('SelectedPizzaForm').submit()" asp-for="Pizza.PizzaSizeId" class="custom-select mr-sm-2"
                                asp-items="Html.GetEnumSelectList<Size>()">
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Pizza.PizzaBaseId" class="col-sm-2 col-form-label">Base</label>
                    <div class="col-sm-10">
                        <select onchange="document.getElementById('SelectedPizzaForm').submit()" asp-for="Pizza.PizzaBaseId" class="custom-select mr-sm-2 "
                                asp-items="Html.GetEnumSelectList<BaseName>()">
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Toppings" class="col-sm-2 align-middle col-form-label"></label>
                    <div class="col-sm-10">
                        @for (int i = 0; i < Model.Toppings.Count; i++)
                        {

                            <input class="mr-2 " type="checkbox" asp-for="Toppings[i].CheckBoxAnswer" onchange="document.getElementById('SelectedPizzaForm').submit()">
                            <label class="col-sm-2 align-text-top " asp-for="Toppings[i].CheckBoxAnswer">@Model.Toppings[i].Name</label>
                            <input type="hidden" asp-for="Toppings[i].Id" value="@Model.Toppings[i].Id">
                            <input type="hidden" asp-for="Toppings[i].Name" value="@Model.Toppings[i].Name">
                            <input type="hidden" asp-for="Toppings[i].Price" value="@Model.Toppings[i].Price">
                        }
                    </div>
                    <span asp-validation-for="Toppings" class="text-danger"></span>
                </div>
