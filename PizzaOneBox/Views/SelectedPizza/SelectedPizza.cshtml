@model SelectedPizzaViewModel;
@using Microsoft.AspNetCore.Http;
<div class="container bg-white " style="margin: 20px; padding: 20px; border-radius: 10px;">
        
        <form class="pizzaTitle" id="SelectedPizzaForm" asp-controller="SelectedPizza" asp-action="SelectedPizza" method="post">
            <div class="center">

                <div class="form-group row">
                    <div class="col-sm-3"><img class=" img" asp-append-version="true" src="@Model.pizza.PhotoPath" /></div>
                    <div class="col-sm-9">
                        <h3 class="col-sm-6 h3 pizzaTitle">@Model.pizza.PizzaName</h3>
                        <p class="h5 col-sm-10">@Model.pizza.PizzaDescription</p>
                    </div>
                    

                </div>
                <div class="form-group row">
                    <label asp-for="order.Size" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select onchange="document.getElementById('SelectedPizzaForm').submit()" asp-for="order.Size" class="custom-select mr-sm-2"
                                asp-items="Html.GetEnumSelectList<Size>()">
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="order.BaseId" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <select onchange="document.getElementById('SelectedPizzaForm').submit()" asp-for="order.BaseId" asp-items="@(new SelectList(Model.order.Base,"BaseId","BaseName"))" class="custom-select mr-sm-2 ">
                            
                        </select>

                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="order.Toppings" class="col-sm-2 align-middle col-form-label"></label>
                    <div class="col-sm-10">
                        @for (int i = 0; i < Model.order.Toppings.Count; i++)
                        {

                            <input class="mr-2 " type="checkbox" asp-for="order.Toppings[i].Selected" onchange="document.getElementById('SelectedPizzaForm').submit()">
                            <label class="col-sm-2 align-text-top " asp-for="order.Toppings[i].Selected">@Model.order.Toppings[i].Name</label>
                            <input type="hidden" asp-for="order.Toppings[i].Id" value="@Model.order.Toppings[i].Id">
                            <input type="hidden" asp-for="order.Toppings[i].Name" value="@Model.order.Toppings[i].Name">
                            <input type="hidden" asp-for="order.Toppings[i].Price" value="@Model.order.Toppings[i].Price">
                        }
                    </div>
                    <span asp-validation-for="order.Toppings" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="order.AddOns" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        @for (int i = 0; i < Model.order.AddOns.Count(); i++)
                        {
                            @if (Model.order.AddOns[i].AddOnName == "Stuff Crust" && Model.order.BaseId != Model.order.Base.FirstOrDefault(x => x.BaseName == "Fresh Pan Pizza").BaseId)
                            {
                                <input class="mr-2 " type="checkbox" disabled asp-for="order.AddOns[i].Selected">
                            }
                            else
                            {
                                <input class="mr-2 " type="checkbox" asp-for="order.AddOns[i].Selected" onchange="document.getElementById('SelectedPizzaForm').submit()">
                            }
                            
                            <label class="col-sm-2 align-text-top " asp-for="order.AddOns[i].Selected">@Model.order.AddOns[i].AddOnName</label>
                            
                        }
                    </div>
                </div>



                <div class="form-group row">

                    <div class="col-sm-5 "><a class=" btn btn-primary" asp-action="HomePage" asp-controller="Home">Back</a></div>
                    <div class="col-sm-5">
                        @if (ViewBag.ActivateOrderButton ?? false && ViewData.ModelState.IsValid)
                        {
                            <button type="submit"  class="btn btn-success placeOrder" asp-action="PlaceOrder">Place Order</button>
                        }
                        else { 
                            <button type="button" disabled class="btn btn-success placeOrder" >Place Order</button>
                        }
                    </div>
                    <div class="col-sm-2 ">Total Cost : <span>&#163;</span>@Model.order.TotalCost</div>

                </div>
            </div>
        </form>

        

    </div>
