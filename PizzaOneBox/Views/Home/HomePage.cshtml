@model IEnumerable<PizzaOneBox.Models.HomePagePizzaModel>



<!DOCTYPE html>
<html>
<body>

    <div>
        <img class="image-resize bannersize" asp-append-version="true" src="~/Pizza_images/pizza3.jpg" alt="banner" />
    </div>
    <nav class="navbar navbar-light bg-light " style="width:138%;margin-left:-20%;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#" style="margin-left:5%;">
                <img src="~/Pizza_images/logo.jpg" alt="" width="40" height="34" class="d-inline-block align-text-top">
                PizzaOneBox
            </a>
            <a class="navbar-brand" href="#" >

                Contact Us 1
            </a>
            <a class="navbar-brand" href="#" >

                Contact Us
            </a>

        </div>
    </nav>
    <br />
    <br />
    <div class="container">
        <div class="row py-5  ">
            @foreach (var pizza in Model)
            {
                <div class=" col-lg-4">
                    <div class="card md-4 shadow-lg p-3 mb-5 bg-white rounded " style="border-radius:5px; ">
                        <img src=@pizza.PhotoPath class=" card-img-top pizzaphoto " />
                        <div class="card-body">
                            <h4 class="card-title">@pizza.PizzaName</h4>
                            <p class="card-text ">@pizza.PizzaDescription </p>
                            <hr />
                            <div class="d-flex justify-content-between align-items-center py-3">
                                <p> £@pizza.PizzaCost </p>
                                <a href="/SelectedPizza/SelectedPizza/@pizza.Id" class="btn btn-primary"> Select </a>
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>

</body>
</html>